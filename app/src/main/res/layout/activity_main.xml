<?xml version="1.0" encoding="utf-8"?>
<com.liangmayong.skin.SkinLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center"
    android:orientation="vertical"
    skin:shape_type="rectangle"
    skin:skin_type="white"
    skin:stroke_width="5dp"
    tools:context="com.liangmayong.android_skin.MainActivity">

    <com.liangmayong.skin.SkinTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="click"
        android:padding="5dp"
        android:text="Hello Skin!"
        skin:shape_type="stroke" />

    <com.liangmayong.skin.SkinButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="click"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="SKIN-BUTTON"
        skin:shape_type="stroke"
        skin:stroke_width="2dp"
        skin:transparent="true" />
</com.liangmayong.skin.SkinLinearLayout>
