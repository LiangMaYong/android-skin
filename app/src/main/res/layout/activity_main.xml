<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.liangmayong.android_skin.MainActivity">

    <com.liangmayong.skin.SkinTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hello Skin!" />

    <com.liangmayong.skin.SkinButton
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:onClick="click"
        android:padding="0dp"
        android:text="SKIN-BUTTON"
        skin:radius="50dp"
        skin:shape_type="round"
        skin:stroke_width="2dp" />

    <com.liangmayong.skin.SkinView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#ff6585"
        android:layout_margin="20dp"
        android:padding="0dp"
        skin:radius="50dp"
        skin:shape_type="round"
        skin:stroke_width="2dp" />
</LinearLayout>
